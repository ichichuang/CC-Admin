{
  "name": "cc-early-bird",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "author": "chichuang",
  "copyright": "Copyright (c) 2025 chichuang",
  "license": "Custom (Non-Commercial Use Only)",
  "description": "Early Bird · 由池闯打造的 Vue3 前端框架 - 基于 Vue 3.5+ 和 TypeScript 5+ 的现代化企业级后台管理框架",
  "keywords": [
    "vue3",
    "typescript",
    "vite",
    "unocss",
    "pinia",
    "alova",
    "admin",
    "framework",
    "early-bird",
    "chichuang",
    "cc-early-bird"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ichichuang/cc-early-bird"
  },
  "homepage": "https://github.com/ichichuang/cc-early-bird#readme",
  "bugs": {
    "url": "https://github.com/ichichuang/cc-early-bird/issues"
  },
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "pnpm --filter @cc/early-bird-app-admin dev",
    "dev:admin": "pnpm --filter @cc/early-bird-app-admin dev",
    "build": "pnpm --filter @cc/early-bird-app-admin build",
    "build:analyze": "pnpm --filter @cc/early-bird-app-admin build --mode analyze",
    "preview": "pnpm --filter @cc/early-bird-app-admin preview",
    "report": "npx vite-bundle-analyzer dist/stats.html",
    "type-check": "pnpm --filter @cc/early-bird-app-admin type-check",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "naming-check": "pnpm exec tsx scripts/naming-rules.ts",
    "naming-watch": "pnpm exec tsx scripts/watch-naming.ts",
    "check": "pnpm type-check && pnpm lint && pnpm naming-check && pnpm env-check && pnpm copyright:check",
    "fix": "pnpm format && pnpm lint",
    "env-check": "pnpm exec tsx scripts/check-env.ts",
    "copyright:add": "pnpm exec tsx scripts/copyright-protection.ts",
    "copyright:check": "pnpm exec tsx scripts/copyright-protection.ts --check",
    "copyright:validate": "pnpm copyright:check && pnpm env-check",
    "pre-commit": "pnpm check && pnpm copyright:check",
    "commit": "git-cz",
    "prepare": "husky",
    "monitor": "pnpm exec tsx scripts/monitor.ts",
    "monitor:quick": "pnpm exec tsx scripts/quick-search.ts",
    "monitor:cleanup": "./monitor_reports/cleanup.sh",
    "monitor:report": "cat monitor_reports/latest/cc_early_bird_monitor_report.md",
    "monitor:status": "echo '📊 监控状态:' && echo '最新报告: monitor_reports/latest/' && ls -la monitor_reports/latest/",
    "token:test": "pnpm exec tsx scripts/test-token.ts",
    "monitor:setup": "echo '请确保已设置 GITHUB_TOKEN 环境变量或创建 .env 文件' && echo '详细说明请查看: monitor_reports/config.md'",
    "init:project": "pnpm exec tsx scripts/init.ts",
    "workspace:install": "pnpm install",
    "workspace:clean": "pnpm -r exec rm -rf node_modules && pnpm install",
    "workspace:build": "pnpm -r build",
    "workspace:dev": "pnpm -r dev",
    "workspace:type-check": "pnpm -r type-check"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,sass,less,styl,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.3",
      "mockjs": "1.0.1-beta3"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.9.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/chokidar": "^2.1.7",
    "@types/node": "^22.10.1",
    "chokidar": "^4.0.3",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.13",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-run-all2": "^7.0.2",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.18.1"
  }
}
